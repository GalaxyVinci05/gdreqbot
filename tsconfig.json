{
    "compilerOptions": {
        "module": "commonjs",
        "target": "ESNext",
        "rootDir": "./src",
        "outDir": "./dist",
        "esModuleInterop": true,
        "noImplicitAny": true,
        "removeComments": true,
        "lib": [
            "ESNext"
        ]
    },
    "include": [
        "src/**/*"
    ],
    "exclude": [
        "node_modules"
    ]
}
